<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>
				[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%-5level] [%-30logger{0}][%-3L] [SeqId:%X{SeqId}] - %msg%n
			</pattern>
		</layout>
	</appender>
	
	<appender name="error" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>ERROR</level>
			<onMatch>ACCEPT</onMatch>   
            <onMismatch>DENY</onMismatch>
		</filter>
		<File>${LogHome}/error/error.log</File>
		<Encoding>GBK</Encoding>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${LogHome}/error/error.log.%d{yyyyMMdd}.%i.bak</FileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>10MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder>
			<Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%c] - %m :%L%n</Pattern>
		</encoder>
	</appender>
	
	
	<appender name="info" class="ch.qos.logback.core.rolling.RollingFileAppender">
		 <filter class="ch.qos.logback.classic.filter.LevelFilter">
		     <level>info</level>
		     <onMatch>ACCEPT</onMatch>
		     <onMismatch>DENY</onMismatch>
		</filter>
        <File>${LogHome}/info/info.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${LogHome}/info/info.log.%d{yyyyMMdd}.%i.bak</FileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>10MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder>
			<Pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%-5level] [%-15logger{0}][%-3L] [SeqId:%X{SeqId}] - %msg%n</Pattern>
		</encoder>
	</appender>
	
	<appender name="errorurl" class="ch.qos.logback.core.rolling.RollingFileAppender">
		 <filter class="ch.qos.logback.classic.filter.LevelFilter">
		     <level>info</level>
		     <onMatch>ACCEPT</onMatch>
		     <onMismatch>DENY</onMismatch>
		</filter>
        <File>${LogHome}/errorurl/errorurl.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${LogHome}/errorurl/errorurl.log.%d{yyyyMMdd}.%i.bak</FileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>10MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder>
			<Pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%-5level] [%-15logger{0}][%-3L] [SeqId:%X{SeqId}] - %msg%n</Pattern>
		</encoder>
	</appender>
	
	<appender name="main" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${LogHome}/main/main.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${LogHome}/main/main.log.%d{yyyyMMdd}.%i.bak</FileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>10MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder>
			<Pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%-5level] [%-15logger{0}][%-3L] [SeqId:%X{SeqId}] - %msg%n</Pattern>
		</encoder>
	</appender>
	
	<root level="debug">
		<appender-ref ref="stdout" />
	</root>
	 
</configuration>
